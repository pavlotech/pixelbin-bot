// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:data.db"
}

model User {
  id            String @id @default(uuid())
  userId        Int     @unique
  registry      String
  subscribe     Int     
  mode          String  @unique
  lastPay       String
  admin         Boolean
  ban           Boolean @unique
  banDate       String
}

model Password {
  id            String @id @default(uuid())
  password      String @unique
}

model Announcement {
  id            String @id @default(uuid())
  media         String
  text          String
  button        String
}