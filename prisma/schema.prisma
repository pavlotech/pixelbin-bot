// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  userId        Int    @unique
  registry      Int 
  subscribe     Int    @unique
  mode          String @unique
  lastPay       Int
  admin         Boolean
  ban           Boolean @unique
  banDate       Int
}

model Admin {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  userId        Int @unique
}

model Password {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  password      String @unique
}

model Ban {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  userId        Int @unique
  date          Int
}

model Announcement {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  media         String
  text          String
  button        String
}